				href="https://github.rackspace.com/IX/auth-2.0/raw/master/src/wadl/identity-admin.wadl#users">
				<wadl:method href="addUser"/>
			</wadl:resource>
			<!-- update user -->
			<wadl:resource
				href="https://github.rackspace.com/IX/auth-2.0/raw/master/src/wadl/identity-admin.wadl#userById">
				<wadl:method href="updateUser"> </wadl:method>
