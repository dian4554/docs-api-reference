				<wadl:method href="deleteUser"> </wadl:method>
			</wadl:resource>
			<!-- get domains for user -->
			<wadl:resource
				href="https://github.rackspace.com/IX/auth-2.0/raw/master/src/wadl/identity-admin.wadl#user_accessible_domains">
				<wadl:method href="getAccessibleDomainsForUser"/>
