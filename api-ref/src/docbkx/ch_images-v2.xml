<?xml version="1.0" encoding="UTF-8"?>
<chapter xmlns="http://docbook.org/ns/docbook"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:linkend="http://www.w3.org/1999/linkend"
    xmlns:xref="http://www.w3.org/1999/xref"
    xmlns:wadl="http://wadl.dev.java.net/2009/02"
    version="5.0-extension RackBook-2.0" xml:id="images-v2">
    <title>Cloud Images API v2</title>
    <section xml:id="images">
        <title>Images</title>
        <para>Create, update, and delete image metadata records. Share
            images with other users. Also, upload and download raw
            image data.</para>
        <wadl:resources xmlns:wadl="http://wadl.dev.java.net/2009/02">
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-2.0.wadl#Images">
                <wadl:method href="#listImages"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-2.0.wadl#ImageID">
                <wadl:method href="#getImage"/>
                <wadl:method href="#updateImage"/>
                <wadl:method href="#deleteImage"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-2.0.wadl#Tagstag">
                <wadl:method href="#addImageTag"/>
                <wadl:method href="#deleteImageTag"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-2.0.wadl#Members">
                <wadl:method href="#createImageMember"/>
                <wadl:method href="#listImageMembers"/>
            </wadl:resource>
            <wadl:resource id="MemberID" path="{member_id}">
                <wadl:method href="#getImageMember"/>
                <wadl:method href="#deleteImageMember"/>
                <wadl:method href="#updateImageMember"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-2.0.wadl#Tasks">
                <wadl:method href="#importImage"/>
                <wadl:method href="#exportImage"/>
                <wadl:method href="#listTasks"/>
            </wadl:resource>
            <wadl:resource id="TaskID" path="{taskID}">
                <wadl:method href="#getTask"/>
            </wadl:resource>
        </wadl:resources>
    </section>
    <section xml:id="image-schemas">
        <title>Image schemas</title>
        <para>Get a JSON-schema document that represents an image or
            images entity.</para>
        <wadl:resources xmlns:wadl="http://wadl.dev.java.net/2009/02">
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-schemas-2.0.wadl#Image-schemas">
                <wadl:method href="#getImagesSchema"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-schemas-2.0.wadl#Image-schema">
                <wadl:method href="#getImageSchema"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-schemas-2.0.wadl#Image-members-schemas">
                <wadl:method href="#getImageMembersSchemas"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-schemas-2.0.wadl#Image-member-schema">
                <wadl:method href="#getImageMemberSchema"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-schemas-2.0.wadl#Image-tasks-schemas">
                <wadl:method href="#getTasksSchemas"/>
            </wadl:resource>
            <wadl:resource
                href="../wadls/cloud-images/wadl/image-schemas-2.0.wadl#Image-task-schema">
                <wadl:method href="#getTaskSchema"/>
            </wadl:resource>
        </wadl:resources>
    </section>
</chapter>
